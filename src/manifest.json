{
  "manifest_version": 3,
  "name": "Tab HTML Retriever with Sidebar",
  "description": "An extension to get HTML content of all open tabs and display a sidebar.",
  "version": "1.0.0",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Tab HTML Retriever"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "minimum_chrome_version": "114",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://traveltriangle.com/*",
    "https://makemytrip.com/*"
  ]
}
