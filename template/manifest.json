{
  "manifest_version": 3,
  "name": "Tab HTML Retriever",
  "version": "1.0",
  "description": "An extension to get HTML content of all open tabs.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
